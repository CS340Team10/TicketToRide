    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cs340.tickettoride.Views.GameEndActivity"
    android:layout_margin="2dp"
    android:id="@+id/gameEndLayout">
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/gameEndGrid"
        app:layout_constraintVertical_weight="20"
        app:layout_constraintTop_toTopOf="@id/gameEndLayout"
        app:layout_constraintBottom_toTopOf="@id/returnToLobbyBtn"
        app:layout_constraintLeft_toLeftOf="@id/gameEndLayout"
        app:layout_constraintRight_toRightOf="@id/gameEndLayout">
        <TextView
            android:text="Points"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Claimed Route"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Dest. Card"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Longest Route"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Total Points"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Winner?"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="P1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:id="@+id/txtP1"/>
        <TextView
            android:text="0"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:id="@+id/txtClaimedRouteP1"/>
        <TextView
            android:text="0"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:id="@+id/txtDestCardP1"/>
        <TextView
            android:text="0"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:id="@+id/txtLongestRouteP1"/>
        <TextView
            android:text="0"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:id="@+id/txtTotalP1"/>
        <TextView
            android:text="No"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:id="@+id/txtWonP1"/>
        <TextView
            android:text="P2"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
